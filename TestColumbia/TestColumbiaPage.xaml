<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestColumbia.TestColumbiaPage"
    Title="Test Columbia">
    
	<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
        <Button Text="Get Current Location" Command="{Binding GetCurrentLocationCommand}" />
        <Label Text="{Binding CurrentLatitude}" />
        <Label Text="{Binding CurrentLongitude}" />
        
        <Button Text="Get Lat/Long for Columbia, SC" Command="{Binding GeocoderColumbiaCommand}" />
        <Label Text="{Binding SearchedLatitude}" />
        <Label Text="{Binding SearchedLongitude}" />
    </StackLayout>
    
</ContentPage>